                                {
                                    "id": 10,
                                    "content": "CS468/568: Describe inclusive design.",
                                    "key": 1
                                },
                                {
                                    "id": 11,
                                    "content": "CS468: Identify problems with a design's inclusiveness. CS568: Analyze a design's inclusiveness.",
                                    "key": 2
                                },
                                {
                                    "id": 12,
                                    "content": "CS468/568: Describe the persona lifecycle.",
                                    "key": 3
                                },
                                {
                                    "id": 13,
                                    "content": "CS468/568: Apply each phase of the persona lifecycle to the creation of your own persona.",
                                    "key": 4
                                },
                                {
                                    "id": 14,
                                    "content": "CS468/568: Use personas to design an inclusive user interface.",
                                    "key": 5
                                },
                                {
                                    "id": 15,
                                    "content": "CS468: Describe inclusiveness evaluation methods. CS568: Evaluate the inclusiveness of a design using an inclusiveness evaluation method.",
                                    "key": 6
                                }
